<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff">

    <ImageView
        android:id="@+id/colorDialog_imageView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#000"
        android:gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/ic_color_lens_white_24dp" />

    <TextView
        android:id="@+id/colorDialog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colorDialog_imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:text="Which color should xxx get?"
        android:textColor="#ff000000"
        android:textSize="18sp" />

    <SeekBar
        android:id="@+id/colorDialog_redSlider"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/colorDialog_text"
        android:max="255"
        android:thumb="@drawable/ic_color_lens_red_24dp" />

    <SeekBar
        android:id="@+id/colorDialog_greenSlider"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/colorDialog_redSlider"
        android:max="255"
        android:thumb="@drawable/ic_color_lens_green_24dp" />

    <SeekBar
        android:id="@+id/colorDialog_blueSlider"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/colorDialog_greenSlider"
        android:max="255"
        android:progress="0"
        android:thumb="@drawable/ic_color_lens_blue_24dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/btn_dialog"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/colorDialog_blueSlider"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff" />

</RelativeLayout>